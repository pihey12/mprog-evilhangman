<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mprog.apps.evilhangman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:debuggable="true">
        <activity
            android:name="nl.mprog.apps.evilhangman.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.mprog.apps.evilhangman.LostActivity"
            android:label="@string/title_activity_lost"
            android:parentActivityName="nl.mprog.apps.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.mprog.apps.MainActivity" />
        </activity>
        <activity
            android:name="nl.mprog.apps.evilhangman.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="nl.mprog.apps.evilhangman.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.mprog.apps.MainActivity" />
        </activity>
        <activity
            android:name="nl.mprog.apps.evilhangman.WinActivity"
            android:label="@string/title_activity_win"
            android:parentActivityName="nl.mprog.apps.evilhangman.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.mprog.apps.evilhangman.MainActivity" />
        </activity>
        <activity
            android:name="nl.mprog.apps.evilhangman.HighscoresActivity"
            android:label="@string/title_activity_highscores"
            android:parentActivityName="nl.mprog.apps.evilhangman.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.mprog.apps.evilhangman.MainActivity" />
        </activity>
    </application>

</manifest>