<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0099cc"
    tools:context=".MainActivity" >
	    
	    <TextView android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_marginTop="10dp"
	        android:text="@string/title"
	        android:textColor="#295578"
	        android:textSize="40sp"
	        android:textAlignment="center"
	        android:layout_centerHorizontal="true"
	        android:textStyle="bold"/>

	    <TextView android:id="@+id/current_word"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_marginTop="25dp"
	        android:text="@string/current_word"
	        android:layout_below="@id/title"
	        android:textColor="#ffffff"
	        android:textSize="40sp"
	        android:textAlignment="center"
	        android:layout_centerHorizontal="true"
	        android:textStyle="bold" />
	    
	    <TextView android:id="@+id/current_pogingen"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_marginTop="50dp"
	        android:text="@string/current_pogingen"
	        android:layout_below="@id/current_word"
	        android:textColor="#ffffff"
	        android:textSize="16sp"
	        android:textAlignment="center"
	        android:layout_centerHorizontal="true"
	        android:textStyle="bold" />
	            
<!-- 	     <ImageView android:id="@+id/logo" -->
<!-- 	         android:layout_width="wrap_content" -->
<!-- 	         android:layout_height="wrap_content" -->
<!-- 	         android:contentDescription="@string/logo" -->
<!-- 	         android:layout_below="@id/current_word" -->
<!--     		 android:background="#000" -->
<!-- 	         android:src="@drawable/evilkid"/> -->
	     
	     <LinearLayout android:layout_width="match_parent"
	         android:layout_height="180dp"
	         android:layout_marginTop="20dp"
	         android:orientation="vertical"
	         android:layout_below="@id/current_pogingen"
	    	 android:background="@drawable/my_border">
	         
	         <LinearLayout android:id="@+id/button_layout_1"
	             android:orientation="horizontal"
	             android:layout_width="fill_parent"
	             android:layout_height="40dp"/>
	         
	         <LinearLayout android:id="@+id/button_layout_2"
	             android:orientation="horizontal"
	             android:layout_width="fill_parent"
	             android:layout_height="40dp"/>
	         
	         <LinearLayout android:id="@+id/button_layout_3"
	             android:orientation="horizontal"
	             android:layout_width="fill_parent"
	             android:layout_height="40dp"/>
	         
	         <LinearLayout android:id="@+id/button_layout_4"
	             android:orientation="horizontal"
	             android:layout_width="fill_parent"
	             android:layout_height="40dp"/>
	             
	     </LinearLayout>
     
</RelativeLayout>